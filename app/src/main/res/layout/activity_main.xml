<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <Button
           android:id="@+id/explicitintent"
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="250dp"
           android:text="klik di sini untuk explicit intent" />

    <Button
        android:id="@+id/implicitintent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="klik di sini utuk implict intent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/explicitintent"
         />
       <Button
           android:id="@+id/intent2"
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:text="klik di sini untuk page 3"
           android:layout_centerHorizontal="true"
           android:layout_below="@+id/implicitintent"
           />

       <Button
           android:id="@+id/intent3"
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:text="klik di sini untuk page 4"
           android:layout_centerHorizontal="true"
           android:layout_below="@+id/intent2"
           />

       <Button
           android:id="@+id/intent4"
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:text="klik di sini untuk page 5"
           android:layout_centerHorizontal="true"
           android:layout_below="@+id/intent3"
           />
       <Button
           android:id="@+id/intent5"
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:text="klik di sini untuk page 6"
           android:layout_centerHorizontal="true"
           android:layout_below="@+id/intent4"
           />


   </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>